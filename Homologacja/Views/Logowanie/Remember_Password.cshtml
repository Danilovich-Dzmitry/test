@model Login

@{
    ViewData["Title"] = "Remember_Paasword";
}

<div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-6">
        <div class="card mt-5 mx-auto" style="width: 935px; height: 601px;">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <h3 class="card-title mb-3">Zaloguj się do systemu e-homologacji firmy AC SA</h3>
                <div class="mb-3 mt-5" style="width: 70%">
                    <label asp-for="Email" class="form-label"></label><br />
                    <input type="text" class="form-control" asp-for="Email" style="width: 100%;" required />
                </div>
                <button type="submit" class="btn btn-primary mt-3" style="width: 30%;">Przypomnij hasło</button>
            </div>
        </div>
    </div>
</div>


